<!-- Hero/Main header -->
<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between"> <!-- Wrapper for the container-->
        <div class="w-1/2">
            <h6 class="text-lg"><e>Are You Hungry?</em></h6> <!-- lg means large -->
            <h1 class="text-6xl font-bold">Don't Wait</h1>
            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">Order Now</button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="">
        </div>
    </div>
</section>

<!-- Menu Section Starts -->
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Pizzas</h1> <!-- mb means margin bottom -->
    <div class="grid grid-cols-4 col-gap-12 row-gap-16"> <!-- Wrapper for card of menu which is a block element taking the width of whole screen-->

        <!-- CARDS Starts -->
        <% pizzas.forEach(function(pizza) { %>
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>"
                            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"> 
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button> <!--In data-pizza, data is the data attribute which is compulsary. pizza is any name. We are getting pizza as object which we will convert it in JSON string. JSON.stringify(pizza) will convert all the pizza object as JSON string -->
                    </div>
                </div>
            </div>
            <% }) %>

    </div>
</section>